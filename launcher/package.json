{
  "name": "rwe-launcher",
  "version": "0.1.0",
  "description": "Launcher application for Robot War Engine",
  "private": true,
  "main": "main.js",
  "scripts": {
    "build:main": "webpack --config webpack.main.config.js",
    "build:master": "webpack --config webpack.master.config.js",
    "build:renderer": "webpack --config webpack.renderer.config.js",
    "build": "npm run build:master && npm run build:main && npm run build:renderer",
    "start": "npm run build:main && cross-env RWE_LAUNCHER_IS_DEV=1 electron ./dist/main.js",
    "server": "webpack-dev-server --config webpack.renderer.config.js",
    "master-server": "npm run build:master && node dist/master-server.js",
    "clean": "rm -rf ./dist",
    "package": "npm run build && electron-packager dist --arch=x64 --overwrite --asar"
  },
  "author": "Michael Heasell",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/react": "^16.8.18",
    "@types/react-dom": "^16.8.4",
    "@types/react-redux": "^7.0.9",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "@types/yargs": "^13.0.0",
    "babel-loader": "^8.0.6",
    "copy-webpack-plugin": "^5.0.3",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "electron": "^5.0.2",
    "electron-devtools-installer": "^2.2.4",
    "electron-packager": "^13.1.1",
    "file-loader": "^3.0.1",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.0.1",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-middleware": "^3.7.0",
    "webpack-dev-server": "^3.4.1"
  },
  "dependencies": {
    "7zip": "0.0.6",
    "@hot-loader/react-dom": "^16.8.6",
    "@material-ui/core": "^4.0.0",
    "@material-ui/icons": "^4.0.0",
    "@types/react-window": "^1.8.0",
    "bufferutil": "^4.0.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-hot-loader": "^4.8.8",
    "react-redux": "^7.0.3",
    "react-window": "^1.8.1",
    "redux": "^4.0.1",
    "redux-observable": "^1.1.0",
    "rxjs": "^6.5.2",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "utf-8-validate": "^5.0.2",
    "yargs": "^13.2.4"
  }
}
