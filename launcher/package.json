{
  "name": "rwe-launcher",
  "version": "0.1.0",
  "description": "Launcher application for Robot War Engine",
  "private": true,
  "main": "main.js",
  "scripts": {
    "build:main": "webpack --config webpack.main.config.js",
    "build:master": "webpack --config webpack.master.config.js",
    "build:renderer": "webpack --config webpack.renderer.config.js",
    "build": "npm run build:master && npm run build:main && npm run build:renderer",
    "start": "npm run build:main && cross-env RWE_LAUNCHER_IS_DEV=1 electron ./dist/main.js",
    "server": "webpack-dev-server --config webpack.renderer.config.js",
    "master-server": "npm run build:master && node dist/master-server.js",
    "clean": "rm -rf ./dist",
    "package": "npm run build && electron-packager dist --arch=x64 --overwrite --asar"
  },
  "author": "Michael Heasell",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.0.3",
    "@types/react": "^16.3.16",
    "@types/react-dom": "^16.0.5",
    "@types/react-redux": "^6.0.1",
    "@types/socket.io": "^1.4.34",
    "@types/socket.io-client": "^1.4.32",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.11",
    "electron": "^2.0.2",
    "electron-devtools-installer": "^2.2.4",
    "electron-packager": "^12.1.0",
    "file-loader": "^1.1.11",
    "style-loader": "^0.21.0",
    "ts-loader": "^4.3.1",
    "tslint": "^5.11.0",
    "typescript": "^2.8.3",
    "webpack": "^4.10.2",
    "webpack-cli": "^3.0.2",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-dev-server": "^3.1.4"
  },
  "dependencies": {
    "7zip": "0.0.6",
    "@material-ui/core": "^1.2.0",
    "bufferutil": "^4.0.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-hot-loader": "^4.3.0",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-observable": "^1.0.0",
    "rxjs": "^6.2.2",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1",
    "utf-8-validate": "^5.0.1"
  }
}
